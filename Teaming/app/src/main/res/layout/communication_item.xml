<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/communication_item_image_receive"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_baseline_left_smile_face"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/communication_item_text_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_left"
            android:gravity="center|start"
            android:text="@string/test"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/communication_item_text_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_right"
            android:gravity="center|start"
            android:text="@string/test"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/communication_item_image_send"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_baseline_right_smile_face"
            android:contentDescription="@null" />
    </LinearLayout>

</LinearLayout>